        <script>
$(document).ready(function() {
    // Variable to track whether the popup is open
    var isPopupOpen = false;

    // Toggle the profile popup when the profile-toggle button is clicked
    $('.profile-toggle').click(function() {
        if (isPopupOpen) {
            $('.profile-popup').hide();
            isPopupOpen = false;
        } else {
            $('.profile-popup').show();
            isPopupOpen = true;
        }
    });

    // Close the profile popup when clicking outside of it
    $(document).on('click', function(event) {
        if (!$(event.target).closest('.profile-popup').length &&!$(event.target).closest('.profile-toggle').length) {
            $('.profile-popup').hide();
            isPopupOpen = false;
        }
    });
});



document.addEventListener('DOMContentLoaded', function() {
    // Function to get the current path
    const getCurrentPath = () => window.location.pathname;

    // Function to check if the current path matches the href of a link
    const isActive = (path, href) => path === href || path.startsWith(href + '/');

    // Get the current path
    const currentPath = getCurrentPath();

    // Find the links
    const profileLink = document.getElementById('profile-link');
    const homeLink = document.getElementById('home-link');

    // Determine which link should be active based on the current path
    let activeLink;
    if (isActive(currentPath, '/profile')) {
        activeLink = profileLink;
    } else if (isActive(currentPath, '/index.html')) {
        activeLink = homeLink;
    }

    // Apply the active class to the determined link
    if (activeLink) {
        activeLink.classList.add('active');
    }

    // Optionally, add a click event listener to the Home link to change its color
    homeLink.addEventListener('click', function(e) {
        e.preventDefault();
        homeLink.style.color = "red"; // Change the color to red, for example
    });
});




