  <section class="container">
    <header>Your almost there</header>
    <form class="form" action="/booking" method="post"> 
      <div class="column">
        <label>Choose Your destination:</label>
        <div class="select-box">
          <select required name="destination">
            <option hidden="">Destination</option>
            <% for (const site of sits) { %>
              <option value="<%= site.id %>"><%= site.name %></option>
            <% } %>
          </select>
        </div>
      </div><br>
    
      <div class="column">
        <label>Choose Your Hotel:</label>
        <div class="select-box">
          <select required name="hotelid">
            <option hidden="">Hotel</option>
            <% for (const hotel of hotels) { %>
              <option value="<%= hotel.id %>"><%= hotel.name %></option>
            <% } %>
          </select>
        </div>
      </div><br>
    
      <div class="column">
        <label>Select Your Tour Guider:</label>
        <div class="select-box">
          <select name="TourGuideid">
            <option hidden="">Tour Guider (Optional)</option>
            <% for (const guide of tours) { %>
              <option value="<%= guide.id %>"><%= guide.name %></option>
            <% } %>
          </select>
        </div>
      </div><br>
    
      <label>Select Occupacy:</label>
      <div class="column">
        <div class="input-box">
          <div class="column">
            <div class="select-box">
              <select required name="num_rooms">
                <option hidden="">Number of Rooms:</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
              </select>
            </div>
          </div>
        </div><br>
        <div class="input-box">
          <div class="column">
            <div class="select-box">
              <select required name="adults">
                <option hidden="">Adults</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
          </div>
          <div class="column">
            <div class="input-box">
              <div class="column">
                <div class="select-box">
                  <select name="children">
                    <option hidden="">Children</option>
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div><br>
    
      <div class="column">
        <div class="input-box">
          <label>Arrival:</label>
          <input required="" name="start_date" type="date">
        </div> <br>
        <div class="input-box">
          <label>Departure:</label>
          <input required="" name="end_date" type="date">
        </div>
      </div>
      <div class="btns">
        <button type="reset">Reset</button>
        <button>Submit</button>
      </div>
    </form>
    
